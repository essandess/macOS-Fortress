#!/bin/sh
#
# MacPorts generated daemondo support script
#

#
# Init
#
prefix=/usr/local

#
# Start
#
Start()
{
   cd /usr/local/var/squid
   if [ ! -d "/usr/local/var/squid/cache/00" ]; then
       /usr/local/sbin/squid -s -z
   fi
   /usr/local/sbin/squid -s -N
}

#
# Stop
#
Stop()
{
   cd /usr/local/var/squid
   /usr/local/sbin/squid -k shutdown
   while /usr/local/sbin/squid -k check; do
       sleep 1
   done
}

#
# Restart
#
Restart()
{
   Stop
   Start
}

#
# Run
#
Run()
{
case $1 in
 start  ) Start   ;;
 stop   ) Stop    ;;
 restart) Restart ;;
 *      ) echo "$0: unknown argument: $1";;
esac
}

#
# Run a phase based on the selector
#
Run $1
